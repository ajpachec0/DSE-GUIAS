@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}@{
    ViewBag.Title = "Bienvenido";
}

<h2>Bienvenido</h2>

<ul>
    @for (int i = 0; i < ViewBag.numVeces; i++)
    {
        if (i>0)
                {

        <li>
            @ViewBag.Mensaje, veces mostrado =  @i
        </li>
                } else
                {
            <li>

                    Te muestro una lista con la cantidad de veces que se imprime esto: 
            </li>
                }
    }
</ul>